<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WeatherApp_Project.Views"
             x:Class="WeatherApp_Project.Views.MainPage"
             Title="WeatherNow">

    <StackLayout Padding="20">
        <Label Text="Welcome to WeatherNow!"
               FontSize="24"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="CenterAndExpand"
               TextColor="#2196F3" />

        <Image Source="weather_icon.png"
               HeightRequest="100"
               WidthRequest="100"
               HorizontalOptions="Center" />

        <Button Text="Get Weather"
                FontSize="20"
                BackgroundColor="#2196F3"
                TextColor="White"
                CornerRadius="8"
                Margin="0,40,0,0"
                Command="{Binding GetWeatherCommand}" />
    </StackLayout>

</ContentPage>

